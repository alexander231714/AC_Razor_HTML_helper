<h1>Mantenimiento de Equipos</h1>
<br />
<form asp-action="CraerEquipos">
    @*Incio del formulario*@

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            <label>Nombre: </label>
        </div>
        <div class="col-sm-4">
            @Html.TextBox("nombre","", new {@class="form-control"})
        </div>
        <div class="col-sm-2">
            @Html.Label("lblDescripcion", "Descripcion: ")
        </div>
        <div class="col-sm-4">
            @Html.TextArea("descripcion", "", new {@class="form-control", @placeHolder="Ingrese la descripcion"})
        </div>
    </div>

    @*Tipo de equipo*@

        <div class="form-group row mb-4">
        <div class="col-sm-2">
            @Html.Label("lblTipoEquipo", "Tipo de equipo: ")
        </div>
        <div class="col-sm-4">
            @Html.DropDownList("tipo_id", ViewData["listadoTipoEquipo"] as SelectList, "Seleccione un tipo", new{@class="form-control"})
        </div>
    </div>

    @*FIN Tipo de equipo*@

    <div class="form-group row mb-4">
        <div class="col-sm-2">
            @Html.Label("lblMarca", "Marca: ")
        </div>
        <div class="col-sm-4">
            @Html.DropDownList("marca_id", ViewData["listadoDeMarcas"] as SelectList, "Seleccione una marca", new{@class="form-control"})
        </div>
        <div class="col-sm-2">
            <label>Modelo: </label>
        </div>
        <div class="col-sm-4">
            @Html.TextBox("modelo","", new {@class="form-control"})
        </div>
    </div>

     <div class="form-group row mb-4">
      <div class="col-sm-2">
            <label>Año de compra: </label>
        </div>
        <div class="col-sm-4">
            @Html.TextBox("anioCompra","", new {@class="form-control"})
        </div>
        <div class="col-sm-2">
            <label>Costo: </label>
        </div>
        <div class="col-sm-4">
            @Html.TextBox("costo","", new {@class="form-control"})
        </div>
    </div>

    @*Estado equipo*@

    <div class="form-group row mb-4">
        <div class="col-sm-2">
        <label>Vida Util: </label>
        </div>
        <div class="col-sm-4">
            @Html.TextBox("vida_util","", new {@class="form-control"})
        </div>
        <div class="col-sm-2">
            @Html.Label("lblEstado_equipo", "Estado de equipo: ")
        </div>
        <div class="col-sm-4">
            @Html.DropDownList("estado_equipo_id", ViewData["listadoEstadoEquipo"] as SelectList, "Seleccione un estado", new{@class="form-control"})
        </div>
    </div>

    @*Fin Estado equipo*@
        <div class="form-group row mb-4">
        <div class="col-sm-2"></div>
        <div class="col-sm-4">
            @Html.CheckBox("inactivo") <label>Inactivo</label>
        </div>
    </div>
    <div class="form-group row mb-4">
        <div class="col-sm-2"></div>
        <div class="col-sm-4">
            <input type="submit" class="btn btn-primary" value="Guardar"/>
        </div>
    </div>
    @* hacemos tabla*@
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Equipo</th>
                <th>Descripcion</th>
                <th>Marca</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var equipos in (IEnumerable<dynamic>)ViewData["listadoDeEquipos"])
            {
                <tr>
                    <td>@equipos.nombre</td>
                    <td>@equipos.descripcion</td>
                    <td>@equipos.marca_nombre</td>
                </tr>
            }
        </tbody>
    </table>
    @* Fin tabla*@

    @*Fin del formulario*@
</form>